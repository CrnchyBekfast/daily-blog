<%- include("partials/header") %> 
    <h1>Compose</h1>
    <form action="/compose" method="post">
        <div class="form-group">
            <label for="titleInput"> Title </label><br>
            <input id="titleInput" class="form-control" type="text" name="title" autocomplete="off" placeholder="Post Title"><br>
            <label for="postInput">Post</label><br>
            <textarea name="post" class="form-control" id="postInput" rows="5" placeholder="Your Post Here"></textarea><br>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-outline-primary " >Publish</button>
        </div>
        
    </form>
<%- include("partials/footer") %> 